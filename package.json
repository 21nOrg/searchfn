{
  "name": "searchfn",
  "version": "0.1.0",
  "description": "IndexedDB-backed full-text search engine with hybrid in-memory caching and FlexSearch-compatible adapters.",
  "license": "Apache-2.0",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "clean": "node -e \"require('fs').rmSync('dist', { recursive: true, force: true })\"",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "test": "vitest",
    "test:watch": "vitest watch",
    "typecheck": "tsc --noEmit",
    "benchmark": "tsx benchmarks/indexing-benchmark.ts",
    "prepublishOnly": "npm run lint && npm run test && npm run build"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "keywords": [
    "search",
    "indexeddb",
    "full-text-search",
    "browser",
    "flexsearch"
  ],
  "author": "21nOrg",
  "repository": {
    "type": "git",
    "url": "https://github.com/21nOrg/searchfn.git"
  },
  "bugs": {
    "url": "https://github.com/21nOrg/searchfn/issues"
  },
  "sideEffects": false,
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "fake-indexeddb": "^6.2.4",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "tsx": "^4.19.1"
  }
}
